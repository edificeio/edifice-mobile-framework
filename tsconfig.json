{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2022", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noErrorTruncation": true,
    "noImplicitAny": false,
    "paths": {
      "~/*": ["./src/*"],
      "ASSETS/*": ["./assets/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true ,
    "target": "ES2022",
  },
  "exclude": ["__tests__/**/*-test.ts","__overrides__/**/*","__stashSpec__/**/*","scaffolder/**/*"],
  "extends": ["@tsconfig/react-native/tsconfig.json"],
}
