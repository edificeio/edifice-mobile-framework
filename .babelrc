{
  "presets": ["module:@react-native/babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "alias": {
          "^~/(.+)": "./src/\\1",
          "^ASSETS/(.+)": "./assets/\\1",
          "^ROOT/(.+)": "./\\1"
        }
      }
    ],
    ["@babel/plugin-proposal-decorators", { "legacy": true }]
  ]
}
